
entity Convocatoria {
    clave String
    nombre String
    objetivo String
    modalidadApoyo ModalidadApoyo
    uri String
    tdr String
    techoPresupuestal Double
    acuerdo String
    cartaSeguridadInformacion String
    secretariaTecnicaClave String
    publicada Boolean
    firma Boolean
}

@embedded
entity StringValue {
    value String
}

@embedded
entity Revision {
    cartaAusenciaConflictoDeInteres String
    cartaSeguridadInformacion String
}


@embedded
entity Demanda {
    clave String
    nombre String
    descripcion String
}

/**
 *  this map to PropuestaEvaluadoresEspecificacion
 */
