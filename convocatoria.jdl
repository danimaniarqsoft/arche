entity PropuestaEvaluador {
    cantidadMinima Integer
    cantidadMaxima Integer
}

@embedded
entity Firma {
    plantilla String

}

@embedded
entity Encargado {
    cvu String
    nombre String
    cargo String
}

@embedded
entity Operador {
    cvu String
    tipo String
    nombre String
    nombreCompleto String
    cargo String
    correo String
}

@embedded
entity Contacto {
    etapa String
    contenido String
}

@embedded
entity PalabrasClave {
    cantidadMinima Integer
    cantidadMaxima Integer
}

@embedded
entity Proyecto {
    clave String
}

@embedded
entity Modalidad {
    clave String
    nombre String
    acuerdo String
    //roles list
    //calendario
    //apoyo
    //campos
    //secciones
    //catalogoDocumentos
    //planTrabajo
    //desgloseFinanciero
    //informeTecnico
}

@embedded
entity Participante {
    nombre String
    clave String
    responsable Boolean
    persona Boolean
    proponeEvaluadores Boolean
    puedeGastarApoyo Boolean
    cantidadMinima Integer
    cantidadMaxima Integer
