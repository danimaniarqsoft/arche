    // tipos array of strings
    // requisitos list
}

@embedded
entity PlanTrabajo {

}

@embedded
entity Actividad {
    longitudMinima Integer
    longitudMaxima Integer
    relacionObjetivo String
    relacionResponsables String
    relacionEntregables String
}

@embedded
entity Etapa {
    longitudMinima Integer
    longitudMaxima Integer
    relacionActividades String
    relacionEntregables String
    relacionMeta String
    // detalle list
}

@embedded
entity DetalleEtapa {
    duracion String
    numero Integer
}


@embedded
entity Entregable {
    longitudMinima Integer
    longitudMaxima Integer
}

@embedded
entity Meta {
    longitudMinima Integer
    longitudMaxima Integer
    relacionObjetivo String
    relacionActividades String
}

@embedded
entity DesgloseFinanciero {
    montoMaximo Double
    longitudMinima Integer
    longitudMaxima Integer
}

@embedded
entity Rubro {
    clave String
    nombre String
    tipo TipoGasto
}

enum OperadorRequisito {
    IGUAL,
    DIFERENTE,
    MENOR_O_IGUAL,
    MAYOR_O_IGUAL
}

enum TipoGasto {
    CORRIENTE,
    INVERSION
}

@embedded
entity ModeloAportacion {
    estrategia Estrategia
    // detalle list

}

@embedded
entity DetalleModeloAportacion {
    responsableId String
    monto Integer
    etapaNumero Integer
    clasificadorGasto String
}


@embedded
entity InformeTecnico {
}

enum Estrategia {
    PORCENTAJE
}

enum TipoFirma {
    AUTOGRAFA,
    SIMPLE,
    ELECTRONICA
}

enum ModalidadApoyo {
    PROYECTOS_DE_INVESTIGACION_CIENTIFICA,
    PROYECTOS_DE_DESARROLLO_TECNOLOGICO,
    PROYECTOS_DE_INNOVACION,
    PROYECTOS_DE_ACCESO_UNIVERSAL_AL_CONOCIMIENTO_Y_SUS_BENEFICIOS_SOCIALES,
    OTRAS_VINCULADAS_CON_HUMANIDADES_CIENCIAS_TECNOLOGIAS_INNOVACION,
    BECAS,
    INFRAESTRUCTURA_INCLUYENDO_PROYECTOS_DE_MODERNIZACION_TECNOLOGICA,
    PROYECTOS_POR_ENCARGO_DE_ESTADO,
    PROYECTOS_PARA_ATENDER_EMERGENCIAS_NACIONALES
}

relationship OneToOne {
  Convocatoria{palabrasClave} to PalabrasClave
  Convocatoria{encargado} to Encargado
  Convocatoria{propuestaEvaluadores} to PropuestaEvaluador
  Convocatoria{firma} to Firma
  Convocatoria{proyecto} to Proyecto
  Convocatoria{revision} to Revision
  Modalidad{calendario} to Calendario
  Modalidad{apoyo} to Apoyo
  Modalidad{planTrabajo} to PlanTrabajo
  Modalidad{desgloseFinanciero} to DesgloseFinanciero
  Modalidad{informeTecnico} to InformeTecnico
  PlanTrabajo{actividad} to Actividad
  PlanTrabajo{etapa} to Etapa
  PlanTrabajo{entregable} to Entregable
  PlanTrabajo{meta} to Meta
}

relationship OneToMany {
  Convocatoria{operadores} to Operador
  Convocatoria{informacionContacto} to Contacto
  Convocatoria{cuentasCorreo} to StringValue
  Convocatoria{demandas} to Demanda
  Convocatoria{modalidadesProyecto} to Modalidad
  Modalidad{roles} to Participante
  Modalidad{campos} to Campo
  Modalidad{secciones} to Seccion
  Modalidad{catalogoDocumentos} to Documento
  Participante{participantes} to Participante
  Participante{requisitos} to Requisito
  Calendario{seguimiento} to EtapaSeguimiento
  Seccion{campos} to Campo
  Etapa{detalle} to DetalleEtapa
  ModeloAportacion{detalle} to DetalleModeloAportacion

}

// Set pagination options
paginate * with pagination

// Use Data Transfer Objects (DTO)
dto * with mapstruct

// Set service options to all except few
service all with serviceImpl

