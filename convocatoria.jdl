}

@embedded
entity Requisito {
    nombre String
    operador OperadorRequisito
    valor String
}

@embedded
entity Calendario {
    publicacion String
    preregistro String
    solicitud String
    evaluacion String
    resultados String
    formalizacion String
    inicioProyectos String
}

@embedded
entity EtapaSeguimiento {
    etapa Integer
    periodo String
}

@embedded
entity Apoyo {
    repeticiones Integer
    unidadTiempo String
    cantidad Integer
    moneda String
    incluyeServicioMedico Boolean
    puedeSolicitarInfraestructuraCientifica Boolean
}

@embedded
entity Campo {
    orden Integer
    clave String
    nombre String
    textoAyuda String
    requerido Boolean
    tipo String
    longitudMinima Integer
    longitudMaxima Integer
}

@embedded
entity Seccion {
    orden Integer
    clave String
    nombre String
    //campos list
}

@embedded
entity Documento {
    nombre String
    clave String
